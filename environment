# Resolve the location of this file and set DSS_HOME to the root
SOURCE="${BASH_SOURCE[0]}"
while [ -h "$SOURCE" ] ; do SOURCE="$(readlink "$SOURCE")"; done
export XVCFMERGE_HOME="$(cd -P "$(dirname "$SOURCE")" && pwd)"

set -a
XVCFMERGE_USER="xvcfmerge"
XVCFMERGE_IMAGE_NAME="xbrianh/xvcf"
XVCFMERGE_CONTAINER_NAME="xvcf"
set +a
